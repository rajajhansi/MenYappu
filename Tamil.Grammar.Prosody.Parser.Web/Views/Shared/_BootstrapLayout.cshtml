<script>
    $("#container-wrapper-with-panels").panelExpander({
        onLoad: function(isCollapsedOnLoad, container) {
            if (isCollapsedOnLoad) {
                container.find('.stacked-menu-items-text').hide();
            }
        },
        beforeCollapse: function(e, container) {
            container.find('.stacked-menu-items-text').hide();
        },
        afterExpand: function(e, container) {
            setTimeout(function(param) {
                container.find('.stacked-menu-items-text').fadeIn(100);
            }, 100);
        }
    });

    $(".stacked-menus").panelSubmenus();
    $('[data-toggle="tooltip"]').tooltip({
        template: '<div class="tooltip" role="tooltip"><div class="tooltip-inner"></div></div>',
        container: 'body'
    });
</script>
