    </div>

    <div class="container-wrap" id="container-wrapper-with-panels">
        <div class="left-panelbar">
            <!--Sidebar content-->
            <div class="stacked-menus">
                <div class="clearfix">
                   <div class="stacked-menus-toggler">
                       <span class="stacked-menu-items-icon">
                           <span class="glyph glyph-hamburger"></span>
                       </span>
                   </div>
               </div>
               <div class="stacked-menus-items">
                <span class="stacked-menu-items-icon">
                    <span class="glyph glyph-home"></span>
                </span>
                <span class="stacked-menu-items-text">
                    முகப்பு
                </span>
            </div>
            <div class="stacked-menus-items">
                <span class="stacked-menu-items-icon">
                    <span class="glyph glyph-music-info"></span>
                </span>
                <span class="stacked-menu-items-text">
                    வெண்பாக்கள்
                </span>
            </div>
            <div class="stacked-menus-items">
                <span class="stacked-menu-items-icon">
                    <span class="glyph glyph-message"></span>
                </span>
                <span class="stacked-menu-items-text">
                    வெண்பா உரையாடல்
                </span>
            </div>
            <div class="stacked-menus-items">
                <span class="stacked-menu-items-icon">
                    <span class="glyph glyph-download"></span>
                </span>
                <span class="stacked-menu-items-text">
                    பதிவிறக்கம்
                </span>
            </div>
            <div class="stacked-menus-items">
                <span class="stacked-menu-items-icon">
                    <span class="glyph glyph-help"></span>
                </span>
                <span class="stacked-menu-items-text">
                    உதவி
                </span>
            </div>
            <div class="stacked-menus-items">
                <span class="stacked-menu-items-icon">
                    <span class="glyph glyph-comment"></span>
                </span>
                <span class="stacked-menu-items-text">
                    கருத்து
                </span>
            </div>
            <div class="stacked-menus-items">
                <span class="stacked-menu-items-icon">
                    <span class="glyph glyph-info"></span>
                </span>
                <span class="stacked-menu-items-text">
                    மென்யாப்பைப் பற்றி
                </span>
            </div>
            <div class="stacked-menus-items">
                <span class="stacked-menu-items-icon">
                    <span class="glyph glyph-settings"></span>
                </span>
                <span class="stacked-menu-items-text">
                    அமைப்புகள்
                </span>
            </div>
        </div>

        <div id="bottom"></div>
    </div>
    <div class="right-panelbar">
        @RenderBody()
    </div>

        <!-- Le javascript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        @*<script src="~/Scripts/bootstrap.min.js"></script>*@
        
        @RenderSection("scripts", required: false)
        @Scripts.Render("~/Scripts/customui")

        <script>
        $("#container-wrapper-with-panels").panelExpander({
            onLoad: function (isCollapsedOnLoad, container) {
                if (isCollapsedOnLoad) {
                    container.find('.stacked-menu-items-text').hide();
                }
            },
            beforeCollapse: function (e, container) {
                container.find('.stacked-menu-items-text').hide();
            },
            afterExpand: function (e, container) {
                setTimeout(function (param) {
                    container.find('.stacked-menu-items-text').fadeIn(100);
                }, 100);
            }
        });
        </script>
    </div>
</body>
</html>
