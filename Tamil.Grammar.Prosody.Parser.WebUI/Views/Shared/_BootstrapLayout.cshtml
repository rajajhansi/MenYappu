    <script>
        var topNavigationBarTemplate = kendo.template($("#topNavigationBarTemplate").html());
        $(".container-fluid").append(topNavigationBarTemplate({}));
        var leftNavigationBarTemplate = kendo.template($("#leftNavigationBarTemplate").html());
        $(".left-panelbar").append(leftNavigationBarTemplate({}));
        var rightPanelBarTemplate = kendo.template($("#rightPanelBarTemplate").html());
        $(".right-panelbar").append(rightPanelBarTemplate({}));
        var aboutMenYappuTemplate = kendo.template($("#aboutMenYappuTemplate").html());
        $("#modal-about-menyappu").append(aboutMenYappuTemplate({}));

        $("#container-wrapper-with-panels")
            .panelExpander({
                persistState: {
                    left: true
                },
                onLoad: function(isCollapsedOnLoad, container) {
                    if (isCollapsedOnLoad['left']) {
                        container.find('#left-panel-inwrap').find('.stacked-menu-items-text').hide();
                    }
                    if (isCollapsedOnLoad['right']) {
                        container.find("#right-panelbar-innercontent").hide();
                    }
                },
                collapsedText: {
                    'right': ProsodyResourceManager.get("help")
                },
                callbacks: {
                    beforeCollapse: {
                        left: function(e, container) {
                            container.find('#left-panel-inwrap').find('.stacked-menu-items-text').hide();
                        },
                        right: function(e, container) {
                            container.find("#right-panelbar-innercontent").hide();
                        }
                    },
                    afterExpand: {
                        left: function(e, container, ctx) {
                            setTimeout(function(param) {
                                    container.find('#left-panel-inwrap').find('.stacked-menu-items-text').fadeIn(100);
                                },
                                100);
                        },
                        right: function(e, container, ctx) {
                            setTimeout(function(param) {
                                    container.find("#right-panelbar-innercontent").fadeIn(100);
                                },
                                100);
                        }
                    }
                }
            });

        $(".stacked-menus").panelSubmenus();
    </script>
