@{
    ViewBag.Title = "எதுகை மோனை எழுது";
}

<ul class="kendo-panelbars-custom" id="seyyulbar">
    <li>
        <h4 class="main-title" data-localize="inputWord">
            <span class="ltext"></span>
            <span class="main-title-icon glyph glyph-chevron-down"></span>
        </h4>
        <ul>
            <li id="seyyul" class="k-state-active">
                <form id="prosodyForm" class="form-horizontal" action="/api/Prosody/MathiraiCount" method="POST">
                    <div class="row">
                        <div class="col-md-8">
                            <h4 class="game-section-title" data-localize="words">
                                <b>
                                    <span class="ltext"></span>
                                </b>
                            </h4>
                            <h4 class="game-section-title" data-localize="firstWord">
                                <span class="ltext"></span>
                            </h4>
                            <input type="text" id="monaiInputText" class="panelbar-text form-control"/>
                            <h4 class="game-section-title" data-localize="firstWord">
                                <span class="ltext"></span>
                            </h4>
                            <input type="text" id="ethukaiInputText" class="panelbar-text form-control"/>
                            <h4 class="game-section-title" data-localize="firstWord">
                                <span class="ltext"></span>
                            </h4>
                            <input type="text" id="iyaipuInputText" class="panelbar-text form-control"/>
                        </div>
                        <div class="col-md-8 hidden" id="thodaiSelector">
                            <h4 class="game-section-title" data-localize="words">
                                <b>
                                    <span class="ltext"></span>
                                </b>
                            </h4>
                            <h4 class="game-section-title" data-localize="alliterationWord">
                                <span class="ltext"></span>
                            </h4>
                            <input type="text" id="monaiText" class="panelbar-text form-control" />
                            <h4 class="game-section-title" data-localize="rhymeWord">
                                <span class="ltext"></span>
                            </h4>
                            <input type="text" id="ethukaiText" class="panelbar-text form-control"/>
                            <h4 class="game-section-title" data-localize="endRhymeWord">
                                <span class="ltext"></span>
                            </h4>
                            <input type="text" id="iyaipuText" class="panelbar-text form-control"/>

                            <div class="control-group">
                                <div class="controls">
                                    <button class="btn btn-primary btn-with-glyph" id="example" data-localize="sample"><i class="glyph glyph-import"></i><span class="ltext"></span></button>
                                    <button type="submit" class="btn btn-primary btn-with-glyph" data-localize="checkAnswer"><i class="glyph glyph-arrow-right"></i><span class="ltext"></span></button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8 hidden" id="result">
                        </div>
                    </div>
                </form>
            </li>
        </ul>
    </li>
</ul>

@{ Html.RenderPartial("_CommonKendoTemplates"); }

<script src="/Scripts/prosody/EthukaiMonaiFinder.js"></script>
<script>
    $(document).ready(function () {
        EthukaiMonaiFinder.init();

        $("#prosodyForm").submit(function () {
            Utility.hideResult();
            /*var data = '{"EthukaiPair" : { "InputText" : "' + $("#ethukaiInputText").val().trim() + '", "ThodaiText" : "' + $("#ethukaiText").val().trim() + '"},'
                + '"MonaiPair" : { "InputText" : "' + $("#monaiInputText").val().trim() + '", "ThodaiText" : "' + $("#monaiText").val().trim() + '"},'
                + '"IyaipuPair" : { "InputText" : "' + $("#iyaipuInputText").val().trim() + '", "ThodaiText" : "' + $("#iyaipuText").val().trim() + '"} }'; */
            var data = '{"thodaiPairs" : [{ "inputText" : "' + $("#monaiInputText").val().trim() + '", "thodaiText" : "' + $("#monaiText").val().trim() + '"},'
                + '{ "inputText" : "' + $("#ethukaiInputText").val().trim() + '", "thodaiText" : "' + $("#ethukaiText").val().trim() + '"},'
                + '{ "inputText" : "' + $("#iyaipuInputText").val().trim() + '", "thodaiText" : "' + $("#iyaipuText").val().trim() + '"}] }';
            ProsodyService.thodaiChecker(data, EthukaiMonaiFinder.showOutputWithResult);
            return false;
        });
    });
</script>